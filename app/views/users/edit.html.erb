<i><%= flash[:notice] %></i>
 <% if @user.errors.any? %>
  <h2><%= @user.errors.count %> errors prohibited</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <div class="container">
  <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h1>Users Info</h1>
          <%= form_with model: @user do |f| %>
         <div class="form-group">
             <label for="user_name">Name</label>
             <%= f.text_field :name, class: 'form-control name', id: 'user_name' %>
         </div>
        <div class="form-group">
             <label for="user_image">Image</label>
             <%= f.file_field :profile_image, class: 'form-control-file user_image', accept: 'image/*', id: 'user_profile_image' %>
        </div>
        <div class="form-group">
             <label for="user_introduction">Introduction</label>
             <%= f.text_area :introduction, class: 'form-control introduction', id: "user_introduction" %>
        </div>

         <div class="form-group">
             <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
         </div>
         <% end %>
     </div>
  </div>  
</div>


